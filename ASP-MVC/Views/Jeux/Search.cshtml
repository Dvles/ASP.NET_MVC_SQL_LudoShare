@{
    ViewData["Title"] = "Search Games";
}

<h1>Search Games</h1>

<form method="get" asp-action="Search">
    <div class="input-group">
        <input type="text" name="searchQuery" class="form-control" placeholder="Search by name or tag" />
        <button class="btn btn-primary" type="submit">Search</button>
    </div>
</form>

@if (Model != null && Model.Any())
{
    <ul>
        @foreach (var jeu in Model)
        {
            <li>@jeu.Name</li>
        }
    </ul>
}
else
{
    <p>No games found.</p>
}
